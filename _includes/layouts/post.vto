---
layout: ./base.vto
body_class: "bg-stone-900 text-white"
---
<article class="py-24">
  <div class="max-w-6xl mx-auto px-6">
    <header class="mb-12">
      <h1 class="text-4xl sm:text-5xl font-bold mb-4">{{ title }}</h1>
      {{ if tags }}
        <div class="mt-4 flex flex-wrap gap-2 mb-4">
          {{ for tag of tags }}
            <span
              class="bg-red-900 text-white text-xs font-medium px-3 py-1 rounded-full"
            >
              {{ tag }}
            </span>
          {{ /for }}
        </div>
      {{ /if }}
      <p class="text-stone-400 italic text-sm">
        {{ date |> date("MMMM d, yyyy") }}
      </p>
    </header>

    <div class="prose prose-invert prose-stone max-w-none">
      {{ content }}
    </div>

    <footer class="mt-16 text-center">
      <a href="/posts" class="text-red-400 hover:underline"
      >‚Üê Back to all posts</a>
    </footer>
  </div>
</article>
